{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "module": "esNext",
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "out-tsc"
  },
  "include": ["src/**/*", "demo/**/*", "rollup.config.js"],
  "exclude": ["node_modules", "*/**/*.test.ts"]
}
